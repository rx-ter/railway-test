<p id="notice"><%= notice %></p>

<h1>Train Routes</h1>
<div class="row justify-content-center">
<table>
  <thead>
    <tr>
      <th>Departure station</th>
      <th>Arrival station</th>
      <th>Train</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @train_routes.each do |train_route| %>
      <tr>
        <td><%= train_route.departure_station.name %></td>
        <td><%= train_route.arrival_station.name %></td>
        <td><%= train_route.train.id %></td>
        <td><%= link_to 'Show', train_route %></td>
        <td><%= link_to 'Edit', edit_train_route_path(train_route) %></td>
        <td><%= link_to 'Destroy', train_route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
<%= link_to 'New Train', new_train_route_path %>